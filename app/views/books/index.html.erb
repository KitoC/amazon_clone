
<div class="panel panel-default bg-light">

  <div class="panel-body panel-default ">
    <form class="form-inline" style="display:flex; justify-content: space-around;">
      <div class="form-group flex-item" style="margin-left: 20px;">
        <label for="product_name">Book Title:</label>
        <input type="text" name="book_title"  class="form-control">
      </div>
      <div class="form-group flex-item" style="margin-left: 20px;">
        <label for="description">Book Author:</label>
        <input type="text" name="book_author" class="form-control">
      </div>
      <div class="form-group flex-item" style="margin-left: 20px;">
        <label for="description">Genre:</label>
        <input type="text" name="book_genre" class="form-control">
      </div>
      <div class="form-group flex-item" style="margin-left: 20px;">
        <label for="price">Price from:</label>
        <input type="text" name="pricefrom" class="form-control">
      </div>
      <div class="form-group flex-item" style="margin-left: 20px;">
        <label for="price">Price to:</label>
        <input type="text" name="priceto" class="form-control">
      </div>
      <input type="submit" value="Filter" class="btn btn-outline-primary" style="margin-left:auto;">
      <%= link_to 'Clear Filters', books_path, class: "btn btn-outline-danger"  %>
    </form>
  </div>
</div>
<h1 style="text-align: center;">Books</h1>
<div style="margin-left: 30px; display: flex; justify-content: space-around; flex-wrap: wrap; ">


  <% @books.each do |book| %>
  <div style="width: 150px; height: 200px; margin: 10px; margin-bottom: 50px;">
    <div style="height: 60%;"> <%= link_to (image_tag(book.image, options={ height: "100px", width: "70px"})), book %> </div>
    <h3 style="font-size: 1em; margin: 0; font-weight: bolder;"><%= link_to book.title, book %></h3>
    <p style="font-size: 0.65em; margin: 0;">Genre: <%= book.genre %></P>
    <p style="font-size: 0.75em; margin: 0;"><%= link_to book.author.name, author_url(book.author.id) %></P>
    <p style="font-size: 0.65em; margin: 0;">Ratings: <%= book.rating %></P>
    <p style="font-size: 0.60em; margin: 0; font-weight: bold;">Price: $<%= book.price %></P>
  </div>


  <% end %>

</div>
<p><%= link_to 'Back', :back %></p>
